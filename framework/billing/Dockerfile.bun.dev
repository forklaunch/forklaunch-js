FROM node:23-alpine

# Install pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Build TypeScript code
RUN pnpm run build

# Expose port
EXPOSE 8001

# Set environment variables
ENV NODE_ENV=production
ENV PORT=8001

CMD ["node", "dist/app.js"]