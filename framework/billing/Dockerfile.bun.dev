FROM oven/bun:1

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Build TypeScript code
RUN bun run build

# Expose port
EXPOSE 8001

# Set environment variables
ENV NODE_ENV=production
ENV PORT=8001

CMD ["bun", "dist/app.js"]