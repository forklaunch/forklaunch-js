// thank you @colinhacks: https://github.com/colinhacks/live-typescript-monorepo/blob/main/custom-conditions
{
  "compilerOptions": {
    // important stuff
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "customConditions": ["@forklaunch/source"],

    // basics
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "jsx": "react-jsx"
  }
}