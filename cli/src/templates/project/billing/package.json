{
  "name": "@{{app_name}}/billing",
  "version": "0.1.0",
  "description": "Billing implementation for {{app_name}}",
  "keywords": [],
  "license": "{{license}}",
  "author": "{{author}}",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist pnpm.lock.yaml node_modules",
    "dev": "{{#is_node}}pnpm{{/is_node}}{{#is_bun}}bun{{/is_bun}} run migrate:up && {{#is_node}}tsx watch server.ts{{/is_node}}{{#is_bun}}bun --watch server.ts{{/is_bun}}",
    "dev:local": "ENV_FILE_PATH=.env.local {{#is_node}}pnpm{{/is_node}}{{#is_bun}}bun{{/is_bun}} run migrate:up && {{#is_node}}tsx watch server.ts{{/is_node}}{{#is_bun}}bun --watch server.ts{{/is_bun}}",
    "docs": "typedoc --out docs *",
    "format": "prettier --ignore-path=.prettierignore --config .prettierrc '**/*.{ts,tsx,json}' --write",
    "lint": "eslint . -c eslint.config.mjs",
    "lint:fix": "eslint . -c eslint.config.mjs --fix",
    "migrate:create": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--require ts-node/register' mikro-orm migration:create",
    "migrate:down": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--require ts-node/register' mikro-orm migration:down",
    "migrate:init": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--require ts-node/register' mikro-orm migration:create --initial",
    "migrate:up": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--require ts-node/register' mikro-orm migration:up",
    "start": "ENV_FILE_PATH=.env.prod && {{#is_node}}pnpm{{/is_node}}{{#is_bun}}bun{{/is_bun}} run migrate:up && {{#is_node}}node --import tsx dist/server.js{{/is_node}}{{#is_bun}}bun dist/server.js{{/is_bun}}",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@forklaunch/common": "^0.2.1",
    "@forklaunch/core": "^0.3.6",
    "@forklaunch/express": "^0.2.6",
    "@forklaunch/hyper-express": "^0.2.7",
    "@forklaunch/validator": "^0.4.4",
    "@{{app_name}}/core": "workspace:*",
    "@mikro-orm/core": "^6.4.6",
    "@mikro-orm/migrations{{#is_mongo}}-mongodb{{/is_mongo}}": "^6.4.6",
    "@mikro-orm/{{database}}": "^6.4.6",
    "@mikro-orm/reflection": "^6.4.6",{{#is_typebox}}
    "@sinclair/typebox": "^0.34.25",{{/is_typebox}}
    "ajv": "^8.17.1",
    "dotenv": "^16.4.7",
    "uuid": "^11.0.5"{{#is_zod}},
    "zod": "^3.24.2"{{/is_zod}}
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.6",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typedoc": "^0.27.7",
    "typescript-eslint": "^8.19.1"
  },
  "mikro-orm": {
    "configPaths": [
      "./mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
