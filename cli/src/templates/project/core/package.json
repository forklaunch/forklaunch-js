{
  "name": "@{{app_name}}/core",
  "version": "0.1.0",
  "description": "The common core lib for all {{app_name}} monorepo services",
  "keywords": [],
  "license": "{{license}}",
  "author": "{{author}}",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib pnpm.lock.yaml node_modules",
    "docs": "typedoc --out docs *",
    "format": "prettier --ignore-path=.prettierignore --config .prettierrc '**/*.{ts,tsx,json}' --write",
    "lint": "eslint . -c eslint.config.mjs",
    "lint:fix": "eslint . -c eslint.config.mjs --fix",
    "test": "{{test-framework}} --passWithNoTests"
  },
  "dependencies": {
    "@forklaunch/common": "^0.2.1",
    "@forklaunch/core": "^0.3.5",{{#is_express}}
    "@forklaunch/express": "^0.2.5",{{/is_express}}{{#is_hyper_express}}
    "@forklaunch/hyper-express": "^0.2.6",{{/is_hyper_express}}
    "@forklaunch/validator": "^0.4.3",
    "@mikro-orm/core": "^6.4.6",
    "@mikro-orm/{{database}}": "^6.4.6"{{#is_typebox}},
    "@sinclair/typebox": "^0.34.25"{{/is_typebox}}{{^is_mongo}},
    "uuid": "^11.0.5"{{/is_mongo}}{{#is_postgres}},
    "zod": "^3.24.2"{{/is_postgres}}
  },
  "devDependencies": { {{#is_zod}}
    "@types/uuid": "^10.0.0",{{/is_zod}}
    "eslint": "^9.17.0",
    "prettier": "^3.5.1",
    "typescript-eslint": "^8.19.1"
  }
}
