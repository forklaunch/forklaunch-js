{
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "[plaintext]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[**/templates/**]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    }
  },
  "rust-analyzer.checkOnSave": true
}