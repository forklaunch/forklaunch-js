    "docs": "pnpm --parallel -r run docs",
    "lint": "pnpm --parallel -r run lint",
    "lint:fix": "pnpm --parallel -r run lint:fix",
    "format": "pnpm --parallel -r run format",
    "test": "pnpm vitest --passWithNoTests",
    "up": "pnpm --parallel -r up"
