{
  "name": "@forklaunch/blueprint-billing",
  "version": "0.1.0",
  "description": "Billing basic implementation for forklaunch",
  "homepage": "https://github.com/forklaunch/forklaunch-js#readme",
  "bugs": {
    "url": "https://github.com/forklaunch/forklaunch-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forklaunch/forklaunch-js.git"
  },
  "license": "MIT",
  "author": "Forklift Technologies, Inc.",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist pnpm.lock.yaml node_modules",
    "dev": "pnpm run migrate:up && pnpm tsx watch server.ts",
    "dev:bun": "bun run migrate:up && bun --watch server.ts",
    "docs": "typedoc --out docs *",
    "format": "prettier --ignore-path=.prettierignore --config .prettierrc '**/*.{ts,tsx,json}' --write",
    "lint": "eslint . -c eslint.config.mjs",
    "lint:fix": "eslint . -c eslint.config.mjs --fix",
    "migrate:create": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--import=tsx' mikro-orm migration:create",
    "migrate:down": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--import=tsx' mikro-orm migration:down",
    "migrate:init": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--import=tsx' mikro-orm migration:create --initial",
    "migrate:up": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--import=tsx' mikro-orm migration:up",
    "seed": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--import=tsx' mikro-orm seeder:run",
    "start": "ENV_FILE_PATH=.env.local NODE_OPTIONS='--import=tsx' node dist/server.js",
    "start:bun": "bun run migrate:up && bun dist/server.js",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@forklaunch/blueprint-core": "workspace:*",
    "@forklaunch/blueprint-monitoring": "workspace:*",
    "@forklaunch/common": "^0.2.4",
    "@forklaunch/core": "^0.5.6",
    "@forklaunch/express": "^0.3.7",
    "@forklaunch/hyper-express": "^0.3.7",
    "@forklaunch/validator": "^0.4.7",
    "@mikro-orm/core": "^6.4.9",
    "@mikro-orm/migrations": "^6.4.9",
    "@mikro-orm/mongodb": "^6.4.9",
    "@mikro-orm/mysql": "^6.4.9",
    "@mikro-orm/postgresql": "^6.4.9",
    "@mikro-orm/reflection": "^6.4.9",
    "@mikro-orm/seeder": "^6.4.9",
    "@mikro-orm/sqlite": "^6.4.9",
    "@sinclair/typebox": "^0.34.30",
    "ajv": "^8.17.1",
    "dotenv": "^16.4.7",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.9",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/qs": "^6.9.18",
    "@types/uuid": "^10.0.0",
    "depcheck": "^1.4.7",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.9"
  },
  "mikro-orm": {
    "configPaths": [
      "./mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
