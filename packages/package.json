{
  "name": "@forklaunch/monorepo",
  "version": "0.1.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "workspaces": [
    "common",
    "core",
    "express",
    "hyper-express",
    "universal-sdk",
    "validator"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "rm -rf node_modules pnpm-lock.yaml && pnpm --parallel -r clean && pnpm store prune",
    "clean:purge": "pnpm run clean && pnpm store prune",
    "docs": "pnpm --parallel -r run docs",
    "format": "prettier --ignore-path=.prettierignore --config .prettierrc '**/*.{ts,tsx,json}' --write",
    "lint": "eslint . -c eslint.config.mjs",
    "lint:fix": "eslint . -c eslint.config.mjs --fix",
    "publish:packages": "pnpm -r run publish:package",
    "test": "pnpm vitest --passWithNoTests",
    "up:packages": "pnpm -r update --latest"
  },
  "lint-staged": {
    "**/*.ts": [
      "pnpm format",
      "pnpm lint:fix"
    ],
    "!**/*package.json": ""
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/jest": "^29.5.14",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "sort-package-json": "^2.15.1",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  }
}
